RewriteEngine On

# Custom error pages
ErrorDocument 403 /pages/403.php
ErrorDocument 404 /pages/404.php
ErrorDocument 500 /pages/500.php

# Blocca accesso a tutti i file che non siano .php, permetti CSS, JS, immagini, font
RewriteCond %{REQUEST_FILENAME} -f
RewriteCond %{REQUEST_URI} !\.php$ [NC]
RewriteCond %{REQUEST_URI} !\.(css|js|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot)$ [NC]
RewriteRule ^.*$ - [F,L]

